{%
  set classes = [
    'clearfix',
    'sidebox',
    'block',
    'block-' ~ configuration.provider|clean_class,
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {% if label %}
    <h2{{ title_attributes }}>{{ label }}</h2>
  {% endif %}
  {{ title_suffix }}
  {% block content %}
    <div{{ content_attributes.addClass('sidebox-content') }}>
      {{ content }}
    </div>
  {% endblock %}
</div>
